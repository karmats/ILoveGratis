<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.karmats.ilovegratis" android:versionCode="4"
	android:versionName="1.3" android:installLocation="auto">
	<application android:icon="@drawable/icon" android:label="@string/appName" android:name=".ILoveGratisApplication"
		android:theme="@android:style/Theme.NoTitleBar">
		<activity android:name=".activity.SplashActivity" android:label="@string/appName" android:screenOrientation="portrait">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

		</activity>

		<activity android:name=".ILoveGratisTabs" android:screenOrientation="portrait"/>
		<activity android:name=".activity.FiveLatestActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activity.FindAdsActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activity.RegisterAdActivity" android:screenOrientation="portrait"/>

		<activity android:name=".activity.AdsActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activity.ViewAdActivity" android:screenOrientation="portrait"/>
		<activity android:name=".activity.SendMailActivity" android:configChanges="orientation|keyboardHidden" />
		
		<!-- Admob -->
		<activity android:name="com.google.ads.AdActivity" android:configChanges="orientation|keyboard|keyboardHidden" />

	</application>

	<!-- Permissions and sdk version -->
	<uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest> 