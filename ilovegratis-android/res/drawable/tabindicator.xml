<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/tab_selected_start"
				android:endColor="@color/tab_selected_stop" android:angle="90" />
			<stroke android:width="1dp" android:color="@color/tab_stroke" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/tab_start"
				android:endColor="@color/tab_stop" android:angle="90" />
			<stroke android:width="1dp" android:color="@color/tab_stroke" />
		</shape>
	</item>
</selector>